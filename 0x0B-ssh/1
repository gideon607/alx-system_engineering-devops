# ssh_config.pp

file { '/home/your_username/.ssh/config':
  ensure  => file,
  owner   => 'your_username',
  group   => 'your_username_group', # Replace with your actual group
  mode    => '0600',
  content => "Host your_target_host
    IdentityFile ~/.ssh/school
    PasswordAuthentication no
",
}
